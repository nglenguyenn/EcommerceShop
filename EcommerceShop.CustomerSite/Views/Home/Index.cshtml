@model IEnumerable<EcommerceShop.Shared.DTO.CategoryDto>

<div class="carousel" data-count="3" data-current="2">
    <!-- <button class="btn btn-control"></button> -->

    <div class="items">
        <div class="item" data-marker="1">
            <img src="~/Template/assets/img/carousel/bckg.jpg" alt="Background" class="background" />
            <div class="content">
                <div class="outside-content">
                    <div class="inside-content">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12 align-center">
                                    <h1>New Iphone</h1>
                                    <p>Best Phone for you</p>
                                    <a href="./catalog/">More></a>
                                    <br><br>
                                </div>
                                <div class="col-sm-6 col-sm-offset-3 align-center">
                                    <img src="~/Template/assets/img/ip12.jpg" alt="Iphone" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="item active" data-marker="2">
            <img src="~/Template/assets/img/carousel/bckg.jpg" alt="Background" class="background" />
            <div class="content">
                <div class="outside-content">
                    <div class="inside-content">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12 align-center">
                                    <a href="./catalog/"> Xiaomi></a>
                                </div>
                                <div class="col-sm-8 col-sm-offset-2 align-center">
                                    <img src="~/Template/assets/img/fold2.jpg" alt="xiaomi" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="item" data-marker="3">
            <img src="~/Template/assets/img/carousel/bckg.jpg" alt="Background" class="background" />
            <div class="content">
                <div class="outside-content">
                    <div class="inside-content">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-5 col-sm-offset-1 align-center">
                                    <img src="~/Template/assets/img/carousel/shopping (1).png" alt="iPad Air 2" class="hidden-xs hidden-sm" />
                                    <img src="~/Template/assets/img/carousel/shopping (1).png" alt="iPad Air 2" class="hidden-md hidden-lg" />
                                </div>
                                <div class="col-sm-4 align-left">
                                    <br class="hidden-xs hidden-sm"><br class="hidden-xs hidden-sm"><br class="hidden-xs hidden-sm">
                                    <br class="hidden-xs hidden-sm"><br class="hidden-xs hidden-sm"><br class="hidden-xs hidden-sm">
                                    <h1>Luxury devices</h1>
                                    <br>

                                    <p>
                                        Luxury watches, business tablets and 3D touch: How Apple plans to stay ahead in mobile.
                                        When it comes to the brand’s latest iPhones, the biggest excitement isn’t focused on the addition of a rose gold coloured device but the new 3D touch sensors.
                                    </p>
                                    <a href="./blog/item-photo.html">View article ></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <ul class="markers">
        <li data-marker="1"><img src="~/Template/assets/img/ip12.jpg" alt="Background" /></li>
        <li data-marker="2" class="active"><img src="~/Template/assets/img/fold2.jpg" alt="Background" /></li>
        <li data-marker="3"><img src="~/Template/assets/img/carousel/shopping (1).png" alt="Background" /></li>
    </ul>
</div>

@*Category*@
<div class="container">
    <div class="row">
        @foreach (var cate in ViewBag.Categories)
        {
            <div class="col-sm-3 align-center">
                <a asp-controller="Product" asp-action="Index" asp-route-id="@cate.CategoryId">
                    <img src="@cate.Images" alt="Blog" class="image" style="height: 200px; width: 200px" /></a>           
                <br><br>

                <a asp-controller="Product" asp-action="Index" asp-route-id="@cate.CategoryId">@cate.NameCategory</a>
            </div>
        }
    </div>
</div>
<br>
<br>
<hr />
@*ProductCard*@
<div class="container">
    <div class="col-sm-12 products">
        <h1 class="text-center">Products</h1>
        <div class="row">
            @foreach (var product in ViewBag.Products)
            {
                @await Component.InvokeAsync("ProductCard", product);
            }
        </div>
    </div>
</div>